<div class="row">
  <div class="span12">
    <h1>Weight Measurements</h1>
  </div>
</div>

<div class="row">
  <div class="span5">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>measurement (unit)</th>
          <th>created at</th>
        </tr>
      </thead>
      <%= render(@weight_measurements) %>
    </table>
  </div>

  <div class="span7"> 
    <%= simple_form_for @weight_measurement, :html => {:class => 'form-horizontal', :id => 'weightInput' } do |f| %>
      <%= f.input :value, :wrapper => :prepend, :label => false do %>
        <%= content_tag :span, @weight_measurement.unit, :class => "add-on" %>
        <%= f.input_field :value %>
        <%= f.button :submit, "Add Measurement", class: 'btn' %>
      <% end %>

      
    <% end %>
    <table class="table table-bordered">
      <tr>
        <td><strong>CURRENT</strong></td>
        <td><strong><%= @latest.value %> <%= @latest.unit %></strong></td>
      </tr>
      <tr>
        <td><strong>Max</strong></td>
        <td><%= @max %></td>
      </tr>
      <tr>
        <td><strong>UQ</strong></td>
        <td><%= @uq %></td>
      </tr>
      <tr>
        <td><strong>Mean</strong></td>
        <td><%= @avg %></td>
      </tr>
      <tr>
        <td><strong>Median</strong></td>
        <td><%= @med %></td>
      </tr>
      <tr>
        <td><strong>LQ</strong></td>
        <td><%= @lq %></td>
      </tr>
      <tr>
        <td><strong>Min</strong></td>
        <td><%= @min %></td>
      </tr>
      <tr>
        <td><strong>N</strong></td>
        <td><%= @total %></td>
      </tr>
    </table>
    <div id="chart">
      
    </div>
  </div>
</div>
